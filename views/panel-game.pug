- levels = ["facile", "intermédière", "difficile", "impossible"]

.panel.panel-primary
  .panel-body
    canvas#boardCanvas(width='512', height='512')
  .panel-footer
    .btn-toolbar(role='toolbar')
      .btn-group.btn-group-sm
        span(class='btn btn-default notclickable')
          | Turn&nbsp;
          span#turn ?
          | &nbsp;of&nbsp;
          span#turnTotal ?
        span(class='btn btn-default notclickable')
          | Score of&nbsp;
          span#score ?
      .btn-group.btn-group-sm.pull-right
        a.btn.btn-warning#reset(href='#', title='Nouvelle partie')
          span.glyphicon.glyphicon-retweet(aria-hidden="true")
        .btn-group.btn-group-sm.dropup(role='group')
          button(type='button', class='btn btn-default dropdown-toggle', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Level&nbsp;
            span#level= '?'
          ul.dropdown-menu.dropdown-menu-right
            - for (var x = 0; x < 4; x++)
              li: a(href='#', id='level' + (x+1))= 'Niveau ' + levels[x]
      .btn-group.btn-group-sm
        a.btn.btn-success(href='#', data-toggle='modal', data-target='#howToPlayModal', title='How to play')
          span.glyphicon.glyphicon-book(aria-hidden='true')
          | &nbsp; How to play

